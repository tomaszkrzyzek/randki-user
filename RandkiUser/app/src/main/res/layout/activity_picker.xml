<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.krzyzek.tomaszkrzyzek.randkiuser.PickerActivity"
    android:orientation="vertical"
    android:background="@color/pink">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Płeć: "
            android:textSize="30dp"/>

        <!--<Spinner-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp"-->
            <!--android:id="@+id/plecSpinner">-->
        <!--</Spinner>-->

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="K"
            android:id="@+id/plec"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Wiek: "
            android:textSize="30dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="15"
            android:id="@+id/minWiek"
            android:textSize="30dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="35"
            android:id="@+id/maxWiek"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Orientacja: "
            android:textSize="30dp"/>

        <!--<Spinner-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp"-->
            <!--android:id="@+id/orientacjaSpinner">-->
        <!--</Spinner>-->

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="hetero"
            android:id="@+id/orientacja"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Miasto: "
            android:textSize="30dp"/>

        <!--<Spinner-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp"-->
            <!--android:id="@+id/miastoSpinner">-->
        <!--</Spinner>-->

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Krakow"
            android:id="@+id/miasto"
            android:textSize="30dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:onClick="finish"
            android:text="zatwierdź"/>

</LinearLayout>
</ScrollView>